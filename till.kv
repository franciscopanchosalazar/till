MainBox:
    id: main_layout
    orientation: "vertical"

    TopBox:
        size_hint: 1, .05

    MiddleBox:  # It contains left and right boxes
        LeftBox:
            id: left_box  # Add an ID for the LeftBox
            padding: ["2dp","2dp","1dp","2dp"] # left, top, right, bottom
            orientation: "vertical"

        RightBox:
            padding: ["1dp","2dp","2dp","2dp"] # left, top, right, bottom
            orientation: "vertical"

    BottomBox:
        size_hint: 1, .1
        spacing: "2dp"

<TopBox>:
    # Top Box Background
    canvas.before:
        Color:
            rgb: .2, .6, .2
        Rectangle:
            size: self.size
            pos: self.pos

    # Items inside the Top Box
    Label:
        text: "My ShopÂ´s Name"

    Label:
        text: "Worker info"

    Label:
        text: "Date"

    Label:
        text: "Time"


<LeftBox>:
    padding: ["0dp","0dp","1dp", "0dp"]
    size_hint: .5, 1

    Label:
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        color: 1, 0, 0
        text: root.info_from_numbers
        halign: 'right'        # Horizontal alignment to the right
        valign: 'bottom'       # Vertical alignment to the bottom
        text_size: self.size
        font_size: "30dp"
        padding: ["10dp", "10dp"]

    NumbersGrid:
        size_hint: 1, .75

    Label:
        id: product_label
        size_hint: 1, .25
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        color: 0, 0, 0
        text: ""
        halign: 'right'
        valign: 'bottom'
        text_size: self.size
        font_size: "15dp"
        padding: ["10dp", "10dp"]

